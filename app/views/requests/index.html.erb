<h1>Listing requests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Budget</th>
      <th>Date response by</th>
      <th>Date request executed</th>
      <th>Location</th>
      <th>Company name</th>
      <th>Address</th>
      <th>Category</th>
      <th>Sub category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.title %></td>
        <td><%= request.description %></td>
        <td><%= request.budget %></td>
        <td><%= request.date_response_by %></td>
        <td><%= request.date_request_executed %></td>
        <td><%= request.location %></td>
        <td><%= request.company_name %></td>
        <td><%= request.address %></td>
        <td><%= request.category %></td>
        <td><%= request.sub_category %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

